<div class="app1 container">
  <div class="row">
    <div class="col-md-4">
      <h1 class="text-center" id="h1Style">Your Burgers</h1>
        <ul class="list-group">
          {{#each burger}}
            {{#unless this.devoured}}
              <li class="list-group-item list-group-item-warning">
              <span class="text-center">
                {{this.id}}. {{this.burger_name}}
                <!--PUT Call-->
                <form action="/{{this.id}}?_method=PUT" method="POST">
                <input type="hidden" name="id" value="{{this.id}}">
                <button class="eatBurger" type="submit">Click to Eat</button>
                </form>
              </span>
            </li>
          {{/unless}}
        {{/each}}
      </ul>
    </div><!--/column-->
    <div class="col-md-4 col-md-offset-2">
     <strong><h1 class="text-center">Burgers Consumed</h1></strong?
        <ul class="list-group">
            {{#each burger}}
            {{#if this.devoured}}
              <li class="list-group-item list-group-item-info">
                  {{this.id}}. {{this.burger_name}}
                <form action="/{{this.id}}?_method=DELETE" method="POST">
                  <input type="hidden" name="id" value="{{this.id}}">
                  <button class="delete" type="submit">Click to Delete</button>
                </form>
              </li>
            {{/if}}
          {{/each}}
        </ul>
    </div>
  </div>
  <div class="submitRow" style="margin: 20px 0 100px 20px;">
   <div class="row">
    <div class="col-md-6 col-md-offset-3 text-center">
      <strong><h1 class="text-center">Create Burger!</h1></strong>
        <form method="POST" action="/" class="button">
          <textarea class="form-control" rows="1" type="text" name="burger" style="text-align: center">Burger Name Here</textarea>
          <button class="submitBurger" type="submit">Save Burger!</button>
        </form>
      </div>
    </div>
  </div>
</div>